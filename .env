# Server Configuration
PORT=8080
ENVIRONMENT=development
VERSION=0.1.0
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s

# Auth Configuration
AZURE_TENANT_ID=your-tenant-id
